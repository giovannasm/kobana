<%= simple_form_for @bank_billet do |form| %>
  <%= form.input :amount, label: "Valor", as: :decimal, step:  0.01, input_html: { class: 'form-control' } %>

  <%= form.input :expire_at, label: "Data limite de pagamento", as: :date, input_html: { class: 'form-control' } %>

  <%= form.input :notes, label: "Notas", as: :text, input_html: { class: 'form-control' } %>

  <%= form.input :days_for_sue, label: "Dias para processo", as: :string, input_html: { class: 'form-control' } %>

  <%= form.input :sue_code, label: "Código processo", as: :string, input_html: { class: 'form-control' } %>

  <%= form.input :instructions, label: "Instruções", as: :text, input_html: { class: 'form-control' } %>

  <%= form.input :description, label: "Descrição", as: :text, input_html: { class: 'form-control' } %>

  <%= form.input :reduction_amount, label: "Valor de redução", as: :string, step:  0.01, input_html: { class: 'form-control' } %>

  <%= form.button :submit, "Editar Boleto", class: "btn btn-outline-success" %>
<% end %>
